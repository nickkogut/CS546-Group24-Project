<div class="page login-page">
  <div class="card">
    <h1 class="title">Welcome back</h1>
    <p class="subtitle">Log in to access your NYC job insights.</p>

    {{#if error}}
      <div class="message error">{{error}}</div>
    {{/if}}

    {{#if msg}}
      <div class="message success">{{msg}}</div>
    {{/if}}

      {{!-- front-end validation error display --}}
    <div id="client-error" class="message error" style="display:none;"></div>

    <form id="login-form" method="POST" action="/auth/login">
      <div class="field">
        <label>Email</label>
        <div class="wrapper">
          <input type="email" name="email" required />
        </div>
      </div>

    <div class="field password-field">
    <label>Password</label>

    <div class="wrapper">
      <input type="password" name="password" id="password" required />

      <!-- Material Icon: visibility / visibility_off -->
      <span class="material-symbols-outlined toggle-password-icon" id="toggle-password">
        visibility
      </span>
    </div>
  </div>


      <button type="submit" class="btn-primary">Log in</button>
    </form>

    <div class="links">
      <a href="/auth/register">Create account</a>
      <a href="/auth/forgot">Forgot password?</a>
    </div>
  </div>
</div>
<script src="/js/login.js"></script>
