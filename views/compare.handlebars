<main>
  <h1>Compare Payroll Job Salaries</h1>

  {{#if error}}
    <p style="color:red">{{error}}</p>
  {{/if}}

  <div>
    <label>Select Job Title:</label>
    <select id="jobSelect">
      {{#each jobs}}
        <option value="{{this}}">{{this}}</option>
      {{/each}}
    </select>
  </div>

  <br>

  <div>
    <label>Your Salary:</label>
    <input id="userSalary" type="number" placeholder="Enter your salary" />
  </div>

  <br>

  <button id="compareBtn">Compare</button>

  <p id="status" style="color:red;"></p>

  <canvas id="histChart" width="800" height="400"></canvas>

  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script src="/js/compare.js"></script>
  <h1>Compare</h1>
  <p>tyler will work on this page</p>
</main>
