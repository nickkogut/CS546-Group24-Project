<main class="myInfo">
  {{#if notFound}}
    <h1>Profile not found</h1>
  {{else}}
    <h1>{{profileUser.firstName}} {{profileUser.lastName}}</h1>

    <h2>Job history</h2>
    {{#if hasJobs}}
      {{#each heldJobs}}
        <div class="job-card">
          <strong>{{title}}</strong>
          {{#if currentJob}} <span>(Current)</span>{{/if}}
          {{#if salary}}<div>Salary: {{formatMoney salary}}</div>{{/if}}
          {{#if startDate}}<div>Start: {{formatDate startDate}}</div>{{/if}}
          {{#if borough}}<div>Borough: {{borough}}</div>{{/if}}
        </div>
      {{/each}}
    {{else}}
      <p>No job history available.</p>
    {{/if}}
  {{/if}}
</main>