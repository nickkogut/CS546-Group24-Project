<div class="page register-page">
  <div class="card">

    <h1 class="title">Create account</h1>
    <p class="subtitle">Sign up to track NYC jobs.</p>

    {{#if error}}
      <div class="message error">{{error}}</div>
    {{/if}}

    {{#if msg}}
      <div class="message success">{{msg}}</div>
    {{/if}}

    <div id="client-error" class="message error" style="display:none;"></div>

    <form id="register-form" method="POST" action="/auth/register">
      <div class="field">
        <label>First Name</label>
        <div class="wrapper">
          <input type="text" name="firstName" required />
        </div>
      </div>

      <div class="field">
        <label>Last Name</label>
        <div class="wrapper">
          <input type="text" name="lastName" required />
        </div>
      </div>

      <div class="field">
        <label>Email</label>
        <div class="wrapper">
          <input type="email" name="email" required />
        </div>
      </div>

      <div class="field">
        <label>Password</label>
        <div class="wrapper password-wrapper">
          <input type="password" name="password" id="password" required />
          <span class="material-symbols-outlined toggle-password-icon" id="toggle-password">
            visibility
          </span>
        </div>
      </div>

      <div class="field">
        <label>Borough</label>
        <div class="wrapper">
          <select name="borough" class="input-like">
            <option value="">Select a borough (optional)</option>
            <option value="Manhattan">Manhattan</option>
            <option value="Brooklyn">Brooklyn</option>
            <option value="Queens">Queens</option>
            <option value="Bronx">Bronx</option>
            <option value="Staten Island">Staten Island</option>
            <option value="Other">Other</option>
          </select>
        </div>
      </div>

      <div class="field">
        <label>Age</label>
        <div class="wrapper">
          <input type="number" name="age" min="1" />
        </div>
      </div>

      <div class="field checkbox-field">
        <label class="checkbox-label">
          <input type="checkbox" name="publicProfile" checked />
          Make my profile public
        </label>
        <p class="field-hint">
          If public, other users can see your job history and tagged jobs.
        </p>
      </div>

      <button type="submit" class="btn-primary">Create account</button>
    </form>

    <div class="links">
      <a href="/auth/login">Back to login</a>
    </div>

  </div>
</div>

<script src="/js/register.js"></script>
